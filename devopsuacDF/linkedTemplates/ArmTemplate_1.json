													"method": "GET",
													"headers": {
														"Content-Type": "application/json"
													},
													"linkedServices": [],
													"datasets": [],
													"authentication": {
														"type": "Basic",
														"username": "ops.admin",
														"password": {
															"type": "AzureKeyVaultSecret",
															"store": {
																"referenceName": "AzureKeyVault1",
																"type": "LinkedServiceReference"
															},
															"secretName": "devopsuac"
