				"variables": {
					"TaskName": {
						"type": "String"
					},
					"Url": {
						"type": "String",
						"defaultValue": "http://uacdevops2ip.westeurope.cloudapp.azure.com:8080/opswise/resources/task"
					},
					"RequestBody": {
						"type": "Array"
					},
					"GetURI": {
						"type": "String",
